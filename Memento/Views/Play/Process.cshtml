@model ProcessModel

@section pageTitle {
    <span>Play</span>
}
@section status {
    @if (User.Identity.IsAuthenticated)
    {
        <div class="d-inline dropdown">
            <button class="btn btn-outline-info btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                @User.Identity.Name
                <span class="caret"></span>
            </button>
            <div class="dropdown-menu dropdown-menu-right">
                <a class="dropdown-item small" asp-action="ProfileSettings" asp-controller="ProfileSettings">Profile Settings</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item small" asp-action="Logout" asp-controller="Account">Log out</a>
            </div>
        </div>
    }
    else
    {
        <a class="btn btn-outline-info btn-sm" asp-action="Login" asp-controller="Account">Log in</a>
        <a class="btn btn-outline-info btn-sm" asp-action="Signup" asp-controller="Account">Sign up</a>
    }
}

<style>
    ul#menu li {
        display: inline;
        font-size: 55pt;
        margin: 0 15PX;
    }

    .butt {
        font-size: 24pt;
        border-radius: 25px;
        border: solid 5px #0061f3;
        background-color: white;
        padding: 0 20px;
        color: #0061f3;
    }

    a.butt:hover {
        background-color: #0061f3;
        color: white;
    }
    /*------------------------------------*/
    h1 {
        text-align: right;
        margin: 0 5% 0 0;
    }

    p {
        text-align: center;
        font-size: 24pt;
    }

    hr {
        width: 50%;
        margin-left: auto;
        margin-right: 10px;
        border-top: solid 3px;
    }

    .hiddenInfo {
        visibility: hidden;
    }

    .pads {
        padding-right: 50px;
        padding-top: 25px;
    }
    /*------------------------------------*/
    .img {
        width: 900px;
        height: 600px;
        object-fit: contain;
        border: 3px solid red;
    }

</style>

<div class="play-section container">
    <div class="row">

        <div class="col-6">

            <img class="col img" src="@Url.Action("GetImage", new { deckId = Model.DeckId, cardId = Model.CurrentCard.Id })">

        </div>

        <div class="col-6 pads">
            <h1>@Model.CurrentCard.Word</h1>
            <hr>
            <h1 class="hiddenInfo">@Model.CurrentCard.Transcription</h1>
            <hr>
            <p class="hiddenInfo">@Model.CurrentCard.Description</p>

            <button onclick="showElement()" class="ui-button align-content-center">Show</button>
            <ul id="menu" class="text-center">
                <li>
                    <a class="butt" asp-action="Process"
                       asp-controller="Play"
                       asp-route-deckId=@Model.DeckId
                       asp-route-remember="1">Got it</a>
                </li>
                <li>
                    <a class="butt" asp-action="Process"
                       asp-controller="Play"
                       asp-route-deckId=@Model.DeckId
                       asp-route-remember="2">Again</a>
            </ul>
        </div>
    </div>

</div>

<script type="text/javascript">
    function showElement() {
        var elements = document.getElementsByClassName('hiddenInfo');
        for (var i = 0; i < elements.length; i++) {
            elements[i].style.visibility = visible
        }
    }
</script>