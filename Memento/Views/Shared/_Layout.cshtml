<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Memento</title>
    <link rel="stylesheet" href="~/css/Statistics.css" />
    <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.min.js"></script>
</head>

<body>
    <header class="navbar navbar-light" style="background-color: #e3f2fd;">
        <a class="navbar-brand" href="#">
            <img src="/img/memento-logo.png" width="30" height="30">
            @RenderSection("pageTitle", required: true)
        </a>
        <div>
            @RenderSection("status", required: true)
            <a href="#">
                <img src="/img/globe-icon.png" width="30" height="30" class="d-inline-block">
            </a>
        </div>
    </header>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 d-none d-md-block bg-light sidebar">
                <div class="sidebar-sticky">
                    <div class="nav flex-column">
                        <a class="nav-link active" href="#">Home</a>
                        <a class="nav-link" asp-action="Play" asp-controller="Home">Play</a>
                        <a class="nav-link" asp-action="Settings" asp-controller="Home">Settings</a>
                        <a class="nav-link" asp-action="ChooseDeck" asp-controller="DeckEditor">Deck Editor</a>
                        <a class="nav-link" href="#">Browse Decks</a>
                        <a class="nav-link" asp-action="Statistics" asp-controller="Home">Statistics</a>
                        <a class="nav-link" href="#">About</a>
                        <div class="dropdown-divider"></div>
                    </div>
                </div>
            </nav>

            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
                <div>
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>
</body>
</html>
