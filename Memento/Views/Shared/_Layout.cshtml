<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Memento</title>
    <link rel="stylesheet" href="~/css/Progressbar.css" />
    <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <link rel="icon" href="~/img/memento-logo.png">
</head>

<body>
    <header class="navbar navbar-light sticky-top" style="background-color: #e3f2fd;">
        <a class="navbar-brand" asp-action="Index" asp-controller="Home">
            <img src="/img/memento-logo.png" width="30" height="30">
            @RenderSection("pageTitle", required: true)
        </a>
        <div>
            @RenderSection("status", required: true)
            <a href="#">
                <img src="/img/globe-icon.png" width="30" height="30" class="d-inline-block">
            </a>
        </div>
    </header>
    <div class="container-fluid">
        <div class="row">
            <nav id="left-panel" class="col-md-2 d-none d-md-block bg-light sidebar position-fixed">
                <div class="sidebar-sticky">
                    <div class="nav flex-column">
                        <a class="nav-link active" asp-action="Index" asp-controller="Home">Home</a>
                        <a class="nav-link" asp-action="Play" asp-controller="Play">Play</a>
                        <a class="nav-link" asp-action="Settings" asp-controller="Settings">Settings</a>
                        <a class="nav-link" asp-action="ChooseDeck" asp-controller="DeckEditor">Deck Editor</a>
                        <a class="nav-link" asp-action="Statistics" asp-controller="Statistics">Statistics</a>
                        <div class="dropdown-divider"></div>
                        <a class="nav-link" asp-action="About" asp-controller="Home">About</a>
                    </div>
                </div>
            </nav>

            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
                <div class="mb-5">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>
</body>
</html>

<script>
    $(document).ready(function () {
        $('#left-panel').css('min-height', $(window).height());
    });
</script>
