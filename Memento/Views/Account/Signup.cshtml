@model SignupModel

@section pageTitle {
    <span>Sign up</span>
}
@section status {
    <a class="btn btn-outline-info btn-sm" asp-action="Login" asp-controller="Account">
        Log in
    </a>
}
<div class="col-xs-1" align="center">
    <h5 class="bg-primary text-white text-center p-2 w-50">Sign up</h5>

    <form class="w-50" method="post" asp-controller="Account" asp-action="Signup">
        <div asp-validation-summary="All" class="text-danger" align="left"></div>

        <div class="form-group" align="left">
            <label>Username</label>
            <div asp-validation-for="UserName" class="text-danger"></div>
            <input asp-for="UserName" class="form-control" />
        </div>

        <div class="form-group" align="left">
            <label asp-for="Email"></label>
            <div asp-validation-for="Email" class="text-danger"></div>
            <input asp-for="Email" class="form-control" />
        </div>

        <div class="form-group" align="left">
            <label asp-for="Password"></label>
            <div asp-validation-for="Password" class="text-danger"></div>
            <input asp-for="Password" type="password" class="form-control" />
        </div>

        <div class="form-group" align="left">
            <label>Confirm Password</label>
            <div asp-validation-for="Password" class="text-danger"></div>
            <input asp-for="PasswordConfirm" type="password" class="form-control" />
        </div>

        <button class="btn btn-primary" type="submit">Sign Up</button>
    </form>
</div>
