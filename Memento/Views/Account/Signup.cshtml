@model SignupModel
@{
    Layout = "_Layout";
}

<h5 class="bg-primary text-white text-center p-2">Sign up</h5>

<form method="post" asp-controller="Account" asp-action="Signup">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="UserName"></label>
        <div asp-validation-for="UserName" class="text-danger"></div>
        <input asp-for="UserName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <div asp-validation-for="Email" class="text-danger"></div>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <div asp-validation-for="Password" class="text-danger"></div>
        <input asp-for="Password" type="password" class="form-control" />
    </div>

    <button class="btn btn-primary" type="submit">Log In</button>
</form>