@{
    Layout = "_Layout";
}

@section pageTitle {
    <span>Email Confirmation</span>
}
@section status {
    <a class="btn btn-outline-info btn-sm" asp-action="Login" asp-controller="Account">
        Log in
    </a>

    <a class="btn btn-outline-info btn-sm" asp-action="Signup" asp-controller="Account">
        Sign up
    </a>
}

<h4>Thank you, for confirming your email, <a asp-action="Login">click here</a> to log in!</h4>
